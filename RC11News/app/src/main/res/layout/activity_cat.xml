<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="11dp"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".CatActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="#0000FF"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categories"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:textSize="38sp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-160dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:text="Genre: "/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:padding="7dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/business"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:padding="4dp"
                    android:background="@drawable/selec"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/bus"
                    />


            </LinearLayout>

            <ImageView

                android:id="@+id/entertainment"

                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="4dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/entertain"
                />

            <ImageView

                android:id="@+id/evs"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/evs"
                />

            <ImageView

                android:id="@+id/food"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/food"
                />

            <ImageView

                android:id="@+id/health"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/health"
                />

            <ImageView

                android:id="@+id/politics"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/politics"
                />

            <ImageView

                android:id="@+id/science"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/science"
                />

            <ImageView

                android:id="@+id/sports"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/sports"
                />

            <ImageView

                android:id="@+id/tech"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/tech"
                />

            <ImageView

                android:id="@+id/top"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/top"
                />

            <ImageView

                android:id="@+id/world"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/globe"
                />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-140dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:text="Countries: "/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:padding="7dp"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/ind"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/ind"
                />


            <ImageView

                android:id="@+id/us"
                android:layout_width="80dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:layout_height="80dp"

                android:src="@drawable/us"
                />

            <ImageView

                android:id="@+id/uk"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/uk"
                />

            <ImageView

                android:id="@+id/au"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/aus"
                />
            <ImageView

                android:id="@+id/uae"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/aue"
                />
            <ImageView

                android:id="@+id/ge"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="7dp"
                android:background="@drawable/selec"
                android:layout_marginRight="10dp"
                android:src="@drawable/germany"
                />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-140dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:text="Language: "/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:padding="7dp"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/en"
                android:layout_marginRight="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/selec"
                android:gravity="center"
                android:text="English"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/hi"
                android:layout_marginRight="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/selec"
                android:gravity="center"
                android:text="हिन्दी"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/fr"
                android:layout_marginRight="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/selec"
                android:gravity="center"
                android:text="French"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/de"
                android:layout_marginRight="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/selec"
                android:gravity="center"
                android:text="German"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/zh"
                android:layout_marginRight="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/selec"
                android:gravity="center"
                android:text="中国人"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/jp"
                android:layout_marginRight="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/selec"
                android:gravity="center"
                android:text="日本"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />



        </LinearLayout>
    </HorizontalScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="40dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_sch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/icon"
        android:padding="12dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_baseline_search_24"
        />
    <ImageView
        android:id="@+id/iv_hm"
        android:layout_width="60dp"
        android:layout_marginLeft="20dp"
        android:layout_height="60dp"
        android:background="@drawable/icon"
        android:padding="12dp"
        android:src="@drawable/ic_home"
        />
</LinearLayout>


</LinearLayout>