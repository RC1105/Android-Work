<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/blue"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_naam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Select Quiz Genre"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="32dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="179dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="150dp"

        android:background="#F8F0E3">

        <ImageView
            android:layout_width="162dp"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/car_quiz" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="0dp"
            android:padding="12dp"
            android:text="CAR QUIZ"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:text="Number of Questions: 5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="55dp"
            android:padding="12dp"
            android:text="Duration: less than 60s\n \nLet's Begin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/btn_start1"
            android:layout_width="127dp"
            android:layout_height="25dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="127dp"
            android:width="0dp"
            android:background="@drawable/start"
            android:text="START"

            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="179dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-120dp"
        android:layout_marginBottom="150dp"
        android:background="#F8F0E3">

        <ImageView
            android:layout_width="162dp"
            android:layout_height="180dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/gk_quiz" />
        <TextView
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="0dp"
            android:padding="12dp"
            android:text="GK QUIZ"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:text="Number of Questions: 5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="5dp"
            android:padding="12dp"
            android:gravity="center"
            android:text="Duration: less than 60s\n \nLet's Begin"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_start2"
            android:layout_width="127dp"
            android:layout_height="25dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="127dp"
            android:width="0dp"
            android:text="START"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:background="@drawable/start"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/res"
        android:padding="7dp"
        android:layout_gravity="center"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:onClick="back"


        />
</LinearLayout>