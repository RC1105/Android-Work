<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="500dp"
    android:padding="27dp"
    android:orientation="vertical"
    android:background="@drawable/squarebox"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GAME SETTINGS"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:gravity="center"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Background Music:"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/unmute"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/unmute"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/mute"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/mute"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_unmute"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Unmute"
                android:visibility="gone"
                android:textColor="#006400"></TextView>
            <TextView

                android:id="@+id/tv_mute"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Mute"
                android:gravity="center"
                android:visibility="visible"
                android:textColor="#ff0000"></TextView>


        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Background Image"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:padding="7dp"

        android:background="@drawable/squarebox2"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/theReddy"
                android:layout_marginRight="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/reddy"
                />

            <ImageView

                android:id="@+id/theBlue"
                android:layout_width="80dp"

                android:layout_marginRight="10dp"
                android:layout_height="80dp"

                android:src="@drawable/blue"
                />

            <ImageView

                android:id="@+id/theSun"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_marginRight="10dp"
                android:src="@drawable/magic"
                />


            <ImageView

                android:id="@+id/theMagic"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_marginRight="10dp"
                android:src="@drawable/magic2"
                />

            <ImageView

                android:id="@+id/sunRise"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_marginRight="10dp"
                android:src="@drawable/sun"
                />

            <ImageView

                android:id="@+id/the80s"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_marginRight="10dp"
                android:src="@drawable/the80s"
                />

            <ImageView

                android:id="@+id/theLeaf"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_marginRight="10dp"
                android:src="@drawable/leaf"
                />
            <ImageView

                android:id="@+id/theWhite"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/white"
                />


            </LinearLayout>
    </HorizontalScrollView>



    <TextView

        android:id="@+id/tv_reset"
        android:layout_marginTop="20dp"

        android:layout_marginBottom="25dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:background="@drawable/res"
        android:text="Reset Statistics"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/tv_back"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:background="@drawable/back"
        android:text="Back"/>

</LinearLayout>