<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_oki"
    tools:context=".FinalActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_personal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="7dp"
        android:padding="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/shape_button_rounded"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_personalHead"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="PERSONAL INFORMATION"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <ImageView
            android:id="@+id/iv_down2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_drop_up"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_personalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:padding="27dp"
        android:orientation="vertical"
        android:visibility="visible"

        android:layout_marginRight="7dp"
        android:background="@drawable/ic_bg">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_final_name"
            android:layout_marginTop="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tv_final_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColorHint="@color/black"
                android:inputType="textPersonName"
                android:hint="Enter Your Name" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_final_mob"
            android:layout_marginTop="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tv_final_mob"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColorHint="@color/black"
                android:inputType="phone"
                android:maxLength="10"
                android:hint="Enter Your Phone Number" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_addr"
            android:layout_marginTop="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tv_addr"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColorHint="@color/black"
                android:inputType="text"
                android:hint="Enter Address" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_final_city"
            android:layout_marginTop="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tv_final_city"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColorHint="@color/black"
                android:inputType="text"
                android:hint="Enter City" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_final_state"
            android:layout_marginTop="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tv_final_state"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColorHint="@color/black"
                android:inputType="text"
                android:hint="Enter State" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_final_pincode"
            android:layout_marginTop="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tv_final_pincode"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColorHint="@color/black"
                android:inputType="number"
                android:maxLength="6"
                android:hint="Enter Pincode" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type of Address*: "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:fontFamily="serif"
                    android:textSize="18dp"></TextView>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton

                        android:id="@+id/rb_home"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="14dp"/>
                    <RadioButton
                        android:id="@+id/rb_office"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Office"
                        android:textSize="14dp"/>
                    <RadioButton
                        android:id="@+id/rb_other"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textSize="14dp"/>

                </RadioGroup>
 </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:padding="7dp"
        android:id="@+id/ll_summary"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_button_rounded"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_summaryHead"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="SUMMARY"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:fontFamily="sans-serif-condensed-medium"/>
        <ImageView
            android:id="@+id/iv_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_drop_down"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/tv_summary"
        android:visibility="gone"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:text="APPLIANCE INFORMATION"
        android:textColor="#0000ff"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_apprep"
        android:padding="11dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="NULL"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:text="BOOKING SCHEDULE"
            android:textColor="#0000ff"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_dnt"

            android:textColor="@color/black"
            android:padding="11dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="NULL"
            />
    </LinearLayout>
            <TextView
                android:id="@+id/tv_finalSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROCEED TO PAY"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="24dp"
                android:textColor="#0000FF"
                android:textStyle="bold"
                android:textSize="18dp"
                android:padding="7dp"
                android:gravity="center"
                android:background="@drawable/login"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
