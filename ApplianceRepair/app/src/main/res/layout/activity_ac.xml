<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="insideOverlay"
    android:orientation="vertical"
    android:background="#D0F2F6"
    android:paddingTop="18dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:gravity="center_horizontal"
    tools:context=".AC_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AIR CONDITIONER REPAIR"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:textSize="24dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:background="@drawable/ic_bg"
            android:orientation="vertical">


    <LinearLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type*: "
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:fontFamily="serif"
        android:textSize="18dp"/>
        <RadioGroup
            android:id="@+id/rgType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_acsplit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Split AC"
                android:textSize="14dp"/>
            <RadioButton
                android:id="@+id/rb_acwindow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Window AC"
                android:textSize="14dp"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company*: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:textSize="18dp"></TextView>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_oth"
        android:layout_marginTop="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tv_oth"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColorHint="@color/black"
            android:inputType="text"
            android:hint="Other*" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_model"
        android:layout_marginTop="12dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/model"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColorHint="@color/black"
            android:inputType="textCapSentences"
            android:hint="Model Name" />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How old is your AC*: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:fontFamily="serif"
            android:textSize="18dp"></TextView>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton

                android:id="@+id/rb_age2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="less than 2"
                android:textSize="14dp"/>
            <RadioButton
                android:id="@+id/rb_age27"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2-7 years"
                android:textSize="14dp"/>
            <RadioButton
                android:id="@+id/rb_age7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="more than 7"
                android:textSize="14dp"/>

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem*: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:fontFamily="serif"
            android:textSize="18dp"></TextView>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_cool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cooling issue"
                android:textSize="14dp"/>
            <RadioButton
                android:id="@+id/rb_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servicing"
                android:textSize="14dp"/>
            <RadioButton
                android:id="@+id/rb_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequent trips"
                android:textSize="14dp"/>
            <RadioButton
                android:id="@+id/rb_sodi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensor or Drainage issue"
                android:textSize="14dp"/>
            <RadioButton
                android:id="@+id/rb_oth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textSize="14dp"/>

        </RadioGroup>

    </LinearLayout>

            <LinearLayout
                android:id="@+id/til_date"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="18dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date*: "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="18dp"></TextView>
                <TextView
                    android:id="@+id/et_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" -- / -- / ----"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="18dp"></TextView>

            </LinearLayout>

            <DatePicker
                android:id="@+id/date_Picker"
                android:layout_width="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_height="match_parent"/>

            <LinearLayout

                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Slot*: "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textSize="18dp"></TextView>
                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <CheckBox
        android:id="@+id/cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="\t  I agree to the terms and conditions"/>


            <TextView
                android:id="@+id/submitac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:padding="7dp"
                android:gravity="center"
                android:background="@drawable/shape_button_rounded"></TextView>

        </LinearLayout>

</ScrollView>

</LinearLayout>